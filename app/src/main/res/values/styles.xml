<resources>

    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <!-- ...and here we setting appcompatâ€™s color theme attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/md_white_1000</item>
        <item name="material_drawer_primary_text">@color/textPrimary</item>
        <item name="material_drawer_secondary_text">@color/textSecondary</item>
        <item name="material_drawer_hint_text">@color/textHint</item>

        <item name="material_drawer_divider">@color/divider</item>

        <item name="material_drawer_selected">@color/colorPrimaryLightLight</item>
        <item name="material_drawer_selected_text">@color/colorPrimaryDark</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_primary_text</item>

        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- BezelImageView -->
    <style name="BezelImageView">
        <!--
        <item name="biv_maskDrawable">@drawable/material_drawer_circle_mask</item>
        <item name="biv_drawCircularShadow">true</item>
        <item name="biv_selectorOnPress">@color/material_drawer_primary</item>
        -->
        <item name="biv_maskDrawable">@drawable/material_drawer_circle_mask</item>
        <item name="biv_drawCircularShadow">false</item>
    </style>
</resources>
